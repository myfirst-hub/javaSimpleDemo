<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.simpleDemo.mapper.TrainProgramStudentMapper">
    
    <resultMap id="StudentMap" type="com.example.simpleDemo.entity.Student">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="sex" property="sex"/>
        <result column="className" property="className"/>
        <result column="height" property="height"/>
        <result column="weight" property="weight"/>
        <result column="birthday" property="birthday"/>
        <result column="native_place" property="nativePlace"/>
        <result column="nationality" property="nationality"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>
    
    <resultMap id="TrainProgramStudentMap" type="com.example.simpleDemo.entity.TrainProgramStudent">
        <id column="id" property="id"/>
        <result column="train_id" property="trainId"/>
        <result column="student_id" property="studentId"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>
    
    <select id="findStudentsByTrainId" resultMap="StudentMap">
        SELECT s.* 
        FROM students s
        INNER JOIN train_program_student tps ON s.id = tps.student_id
        WHERE tps.train_id = #{trainId}
        ORDER BY s.id
    </select>
    
    <insert id="insertTrainProgramStudent" parameterType="com.example.simpleDemo.entity.TrainProgramStudent" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO train_program_student (train_id, student_id, created_at)
        VALUES (#{trainId}, #{studentId}, NOW())
    </insert>
    
    <delete id="deleteByTrainId" parameterType="int">
        DELETE FROM train_program_student WHERE train_id = #{trainId}
    </delete>
    
    <delete id="deleteByTrainIdAndStudentId" parameterType="map">
        DELETE FROM train_program_student WHERE train_id = #{trainId} AND student_id = #{studentId}
    </delete>
    
</mapper>