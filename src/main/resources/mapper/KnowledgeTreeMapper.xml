<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.simpleDemo.mapper.KnowledgeTreeMapper">
    
    <resultMap id="KnowledgeTreeMap" type="com.example.simpleDemo.entity.KnowledgeTree">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="knowledgeDescribe" column="knowledge_describe"/>
        <result property="parentId" column="parent_id"/>
        <result property="masteryLevel" column="mastery_level"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <!-- 查询所有知识点 -->
    <select id="findAll" resultMap="KnowledgeTreeMap">
        SELECT id, name, knowledge_describe, parent_id, mastery_level, created_at, updated_at
        FROM knowledges_tree
    </select>
    
    <!-- 根据ID查询知识点 -->
    <select id="findById" parameterType="long" resultMap="KnowledgeTreeMap">
        SELECT id, name, knowledge_describe, parent_id, mastery_level, created_at, updated_at
        FROM knowledges_tree
        WHERE id = #{id}
    </select>
    
    <!-- 插入新的知识点 -->
    <insert id="insert" parameterType="com.example.simpleDemo.entity.KnowledgeTree" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO knowledges_tree (name, knowledge_describe, parent_id, mastery_level, created_at, updated_at)
        VALUES (#{name}, #{knowledgeDescribe}, #{parentId}, #{masteryLevel}, #{createdAt}, #{updatedAt})
    </insert>
    
</mapper>