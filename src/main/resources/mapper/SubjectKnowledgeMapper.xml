<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.simpleDemo.mapper.SubjectKnowledgeMapper">
    
    <resultMap id="SubjectKnowledgeResultMap" type="com.example.simpleDemo.entity.SubjectKnowledge">
        <id property="id" column="id"/>
        <result property="subjectId" column="subject_id"/>
        <result property="knowledgeId" column="knowledge_id"/>
        <result property="masteryLevel" column="mastery_level"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <insert id="insertSubjectKnowledge" parameterType="com.example.simpleDemo.entity.SubjectKnowledge">
        INSERT INTO subject_knowledge(subject_id, knowledge_id, mastery_level)
        VALUES (#{subjectId}, #{knowledgeId}, #{masteryLevel})
    </insert>
    
    <delete id="deleteSubjectKnowledgeById">
        DELETE FROM subject_knowledge WHERE id = #{id}
    </delete>
    
    <delete id="deleteSubjectKnowledgeBySubjectId">
        DELETE FROM subject_knowledge WHERE subject_id = #{subjectId}
    </delete>
    
    <select id="findKnowledgeIdsBySubjectId" resultType="java.lang.Long">
        SELECT knowledge_id
        FROM subject_knowledge
        WHERE subject_id = #{subjectId}
    </select>
</mapper>