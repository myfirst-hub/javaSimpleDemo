<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.simpleDemo.mapper.KnowledgeMapper">
    
    <resultMap id="KnowledgeResultMap" type="com.example.simpleDemo.entity.Knowledge">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="masteryLevel" column="mastery_level"/>
        <result property="knowledgeDescribe" column="knowledge_describe"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <select id="findKnowledges" resultMap="KnowledgeResultMap" parameterType="map">
        SELECT id, name, mastery_level, knowledge_describe, created_at, updated_at 
        FROM knowledges
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
        </where>
        ORDER BY id
    </select>
    
    <insert id="insertKnowledge" parameterType="com.example.simpleDemo.entity.Knowledge" 
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO knowledges(name, mastery_level, knowledge_describe)
        VALUES(#{name}, #{masteryLevel}, #{knowledgeDescribe})
    </insert>
</mapper>