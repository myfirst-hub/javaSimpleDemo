<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.simpleDemo.mapper.TeacherMapper">
    
    <resultMap id="TeacherResultMap" type="com.example.simpleDemo.entity.Teacher">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="code" column="code"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
    </resultMap>
    
    <select id="findTeachers" resultMap="TeacherResultMap" parameterType="map">
        SELECT id, name, code, create_at, update_at 
        FROM teachers
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="code != null and code != ''">
                AND code LIKE CONCAT('%', #{code}, '%')
            </if>
        </where>
        ORDER BY id
    </select>
</mapper>